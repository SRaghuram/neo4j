<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.neo4j</groupId>
    <artifactId>cypher-parent</artifactId>
    <version>4.0.0-SNAPSHOT</version>
    <relativePath>../../../public/community/cypher/</relativePath>
  </parent>

  <groupId>com.neo4j</groupId>
  <artifactId>cypher-enterprise-parent</artifactId>
  <version>4.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Neo4j - Enterprise Cypher Build</name>
  <description>Project that builds the Neo4j Cypher modules as part of the Enterprise distribution.</description>
  <url>http://components.neo4j.org/${project.artifactId}/${project.version}</url>

  <properties>
    <license-text.header>commercial-license-header.txt</license-text.header>
  </properties>

  <licenses>
    <license>
      <name>Neo4j Commercial license</name>
      <comments>
        Copyright (c) 2002-2018 "Neo Technology,"
        Network Engine for Objects in Lund AB [http://neotechnology.com]
        This file is a commercial add-on to Neo4j Enterprise Edition.
      </comments>
    </license>
  </licenses>

  <scm>
    <connection>scm:git:git://github.com/neo4j/neo4j.git</connection>
    <developerConnection>scm:git:git@github.com:neo4j/neo4j.git</developerConnection>
    <url>https://github.com/neo4j/neo4j</url>
  </scm>

  <profiles>
    <profile>
      <id>include-cypher</id>
      <activation>
        <property>
          <name>!skipCypher</name>
        </property>
      </activation>
      <modules>
        <module>acceptance-spec-suite</module>
        <module>compatibility-spec-suite</module>
        <module>physical-planning</module>
        <module>slotted-runtime</module>
        <module>morsel-runtime</module>
        <module>compiled-expressions</module>
        <module>cypher</module>
      </modules>
    </profile>
  </profiles>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.scalastyle</groupId>
          <artifactId>scalastyle-maven-plugin</artifactId>
          <configuration>
            <configLocation>${project.basedir}/../../../../public/community/cypher/scalastyle_config.xml</configLocation>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-enforcer-plugin</artifactId>
          <configuration combine.self="override">
            <rules>
              <evaluateBeanshell>
                <message>Maven module has to be in a "groupId" beginning with "com.neo4j"</message>
                <condition>{String s = "${project.groupId}"; s.startsWith("com.neo4j");}</condition>
              </evaluateBeanshell>
            </rules>
            <fail>true</fail>
          </configuration>
        </plugin>

        <plugin>
          <groupId>org.neo4j.build.plugins</groupId>
          <artifactId>licensing-maven-plugin</artifactId>
          <configuration>
            <excludedGroups>
              ^((org.neo4j){1}|(org.neo4j.app){1}|(org.neo4j.server.plugin){1}|(org.neo4j.assembly){1}|(org.neo4j.bolt){1}|(org.neo4j.build){1}|(org.neo4j.test){1}|(com.neo4j){1}|(com.neo4j.app){1}|(com.neo4j.server.plugin){1}|(com.neo4j.assembly){1}|(com.neo4j.bolt){1}|(com.neo4j.build){1}|(com.neo4j.test){1})$
            </excludedGroups>
          </configuration>
          <executions>
            <execution>
              <id>list-all-licenses</id>
              <configuration>
                <prependText>commercial-notice.txt</prependText>
                <checkExistingNoticeFile combine.self="override" />
              </configuration>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>com.neo4j.build</groupId>
              <artifactId>build-resources-commercial</artifactId>
              <version>${project.version}</version>
            </dependency>
          </dependencies>
        </plugin>
        <plugin>
          <groupId>com.mycila</groupId>
          <artifactId>license-maven-plugin</artifactId>
          <dependencies>
            <dependency>
              <groupId>com.neo4j.build</groupId>
              <artifactId>build-resources-commercial</artifactId>
              <version>${project.version}</version>
            </dependency>
          </dependencies>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
</project>
