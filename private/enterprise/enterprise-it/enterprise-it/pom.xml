    <artifactId>enterprise-it</artifactId>
    <version>4.2.0-SNAPSHOT</version>

    <name>Neo4j - Enterprise Generic Integration Tests</name>
    <packaging>jar</packaging>
    <description>Neo4j Enterprise Generic Integration Tests.</description>

    <properties>
        <moduleName>com.neo4j.enterprise.enterprise.it</moduleName>
        <default.jupiter.test.mode>concurrent</default.jupiter.test.mode>
    </properties>

    <scm>
        <connection>scm:git:git://github.com/neo4j/neo4j.git</connection>
        <developerConnection>scm:git:git@github.com:neo4j/neo4j.git</developerConnection>
        <url>https://github.com/neo4j/neo4j</url>
