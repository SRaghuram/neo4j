    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.neo4j</groupId>
        <artifactId>commercial-parent</artifactId>
        <version>4.0.0-SNAPSHOT</version>
        <relativePath>../..</relativePath>
    </parent>
    <artifactId>neo4j-commercial-kernel</artifactId>
    <version>4.0.0-SNAPSHOT</version>

    <name>Neo4j - Commercial Parts of Graph Database Kernel</name>
    <description>Commercial Parts of Graph Database Kernel.</description>
    <packaging>jar</packaging>

    <properties>
        <moduleName>com.neo4j.kernel.commercial</moduleName>
    </properties>

    <scm>
        <connection>scm:git:git://github.com/neo4j/neo4j.git</connection>
        <developerConnection>scm:git:git@github.com:neo4j/neo4j.git</developerConnection>
        <url>https://github.com/neo4j/neo4j</url>
    </scm>

    <licenses>
        <license>
            <name>Neo4j Commercial license</name>
            <comments>
                Copyright (c) 2002-2018 "Neo Technology,"
                Network Engine for Objects in Lund AB [http://neotechnology.com]
                This file is a commercial add-on to Neo4j Enterprise Edition.
            </comments>
        </license>
    </licenses>

  <build>
    <plugins>
      <!-- This module contains public API, run revapi -->
      <plugin>
        <groupId>org.revapi</groupId>
        <artifactId>revapi-maven-plugin</artifactId>
          <configuration>
              <analysisConfiguration>
                  <revapi.java>
                      <filter>
                          <packages>
                              <include>
                                  <item>org.neo4j.graphdb.factory</item>
                              </include>
                          </packages>
                      </filter>
                  </revapi.java>
                  <revapi.ignore>
                      <item>
                          <code>java.method.parameterTypeChanged</code>
                          <classQualifiedName>org.neo4j.graphdb.factory.GraphDatabaseFactory</classQualifiedName>
                          <newType>org.neo4j.graphdb.facade.GraphDatabaseFacadeFactory.Dependencies</newType>
                          <oldType>org.neo4j.kernel.impl.factory.GraphDatabaseFacadeFactory.Dependencies</oldType>
                          <justification>This class was moved during edition/platform separation from the kernel</justification>
                      </item>
                      <item>
                          <code>java.method.returnTypeChanged</code>
                          <classQualifiedName>org.neo4j.graphdb.factory.GraphDatabaseFactoryState</classQualifiedName>
                          <newType>org.neo4j.graphdb.facade.GraphDatabaseFacadeFactory.Dependencies</newType>
                          <oldType>org.neo4j.kernel.impl.factory.GraphDatabaseFacadeFactory.Dependencies</oldType>
                          <justification>This class was moved during edition/platform separation from the kernel</justification>
                      </item>
                  </revapi.ignore>
              </analysisConfiguration>
              <oldArtifacts>
                  <oldArtifact>
                      org.neo4j:neo4j-enterprise-kernel:jar:LATEST
                  </oldArtifact>
              </oldArtifacts>
          </configuration>
      </plugin>
      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>scala-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

