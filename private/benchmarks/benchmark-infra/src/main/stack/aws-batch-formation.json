          "Ulimits" : [
            {
              "Name" : "nofile",
              "SoftLimit" : 80000,
              "HardLimit" : 80000
            }
          ]
        }
      }
    },
    "MacroBenchmarkRunJobDefintionSmallJDK8": {
      "Type": "AWS::Batch::JobDefinition",
      "Properties": {
        "JobDefinitionName": {
          "Fn::Sub": "macro-benchmark-job-definition-small-oracle8-${STAGE}"
        },
        "Type": "container",
        "ContainerProperties": {
