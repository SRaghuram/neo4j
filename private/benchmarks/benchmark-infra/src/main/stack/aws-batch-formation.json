            }
          ],
          "MountPoints": [
            {
              "SourceVolume": "work",
              "ContainerPath": "/work/run",
              "ReadOnly": false
            }
          ],
          "Privileged": true,
          "Vcpus": 2,
          "Memory": 7000,
